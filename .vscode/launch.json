    "version": "0.2.0",
    "configurations": [

        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'hello_world'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=hello-world"
                ],
                "filter": {
                    "name": "hello_world",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'hello-world'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=hello-world",
                    "--package=hello-world"
                ],
                "filter": {
                    "name": "hello-world",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'hello-world' with args",
            "cargo": {
                "args": [
                    "build",
                    "--bin=hello-world",
                    "--package=hello-world"
                ],
                "filter": {
                    "name": "hello-world",
                    "kind": "bin"
                }
            },
            "args": ["test_data/alive.json", "-c" ,"--theorem-path","./target/alive/proof"],
            "cwd": "${workspaceFolder}"
        },
        {
